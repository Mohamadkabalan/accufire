<div class="faqs">
    <div class="container">
        <h2 class="section-title faqs__title" style="text-transform: capitalize;">{{fields.title}}</h2>
        <p class="section-subtitle faqs__subtitle">{{fields.subtitle}}</p>

        <div class="accordion" id="accordionExample">
            {% for key, item in fields.questions %}
            <div class="accordion-item">
                <p class="accordion-header" id="heading{{key}}">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                        data-bs-target="#collapse{{key}}" aria-expanded="false" aria-controls="collapse{{key}}">
                        {{Post(item.question).title}}
                    </button>
                </p>
                <div id="collapse{{key}}" class="accordion-collapse collapse" aria-labelledby="heading{{key}}" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        {{Post(item.question).content}}
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>