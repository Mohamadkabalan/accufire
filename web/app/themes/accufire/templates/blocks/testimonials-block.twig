<div class="testimonials">
  <div class="testimonials__content">
    <div class="container">
      <div class="row">
        <div class="col-md-5">
          <div class="testimonials__content-title-wrapper">
            <img class="testimonials__content-misc" src="{{ theme.link }}/assets/images/testimonials-misc.svg" alt="">
            <p class="testimonials__content-subtitle">Testimonials</p>
            <h2 class="testimonials__content-title">What People is Saying</h2>
          </div>
        </div>
        <div class="col">
<div class="testimonials-carousel">
  <img class="testimonials-carousel__misc" src="{{ theme.link }}/assets/images/testimonials-misc.svg" alt="">
  <div id="testimonialsCarouselIndicators" class="carousel slide w-100" data-bs-ride="carousel">
    <div class="carousel-indicators">
    {% for key, item in fields.testimonials %}
      {% if loop.first %}
      <button type="button" data-bs-target="#testimonialsCarouselIndicators" data-bs-slide-to="{{key}}" class="active"
        aria-current="true" aria-label="Slide {{key}}"></button>
      {% else %}
      <button type="button" data-bs-target="#testimonialsCarouselIndicators" data-bs-slide-to="{{key}}"
        aria-label="Slide {{key}}"></button>
      {% endif %}
    {% endfor %}

    </div>
    <div class="carousel-inner">

      {% for item in fields.testimonials %}

      {% if loop.first %}
      <div class="carousel-item active">
      {% else %}
      <div class="carousel-item">
      {% endif %}
        <div class="testimonials-carousel__content">
          <p class="testimonials-carousel__quote">{{ item.testimonial.quote }}</p>
          <p class="testimonials-carousel__name">{{ item.testimonial.testimonial_name }}</p>
          <p class="testimonials-carousel__city">{{ item.testimonial.city }}</p>
        </div>
      </div>
      
      {% endfor %}

      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#testimonialsCarouselIndicators"
        data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#testimonialsCarouselIndicators"
        data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  </div>
        </div>
      </div>
    </div>
  </div>
</div>